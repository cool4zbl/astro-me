---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const bookshelf = [
  {
    title: '在读',
    items: [
      { name: '《浪潮之巅》', note: '重温科技公司的兴衰史，提醒自己保持好奇。' },
      { name: 'Clean Architecture', note: '实践结构化思维，让代码更耐看。' },
    ],
  },
  {
    title: '读过',
    items: [
      { name: '《三体》', note: '宏大的想象力，提醒我保持敬畏。' },
      { name: 'The Pragmatic Programmer', note: '把成长拆成可操作的小练习。' },
    ],
  },
  {
    title: '想读',
    items: [
      { name: '《刻意练习》', note: '如何把热情变成节奏。' },
      { name: 'Designing Data-Intensive Applications', note: '打磨系统设计的底层感知。' },
    ],
  },
];

const articlesILike = [
  {
    title: 'The Architecture of Open Source Applications',
    author: 'Amy Brown & Greg Wilson',
    url: 'https://aosabook.org/',
    note: '从实际项目中学习架构设计的思路，每个案例都很实用。'
  },
  {
    title: 'High Scalability',
    author: 'Todd Hoff',
    url: 'http://highscalability.com/',
    note: '大规模系统设计的案例分析，总能找到新的思路。'
  },
  {
    title: 'Martin Fowler\'s Blog',
    author: 'Martin Fowler',
    url: 'https://martinfowler.com/',
    note: '软件设计的经典思考，文章质量很高。'
  },
  {
    title: 'Joel on Software',
    author: 'Joel Spolsky',
    url: 'https://www.joelonsoftware.com/',
    note: '关于软件开发的深度思考，很多观点至今仍然适用。'
  },
  {
    title: 'Hacker News',
    author: 'Y Combinator',
    url: 'https://news.ycombinator.com/',
    note: '技术圈的日常讨论，总能发现有趣的项目和观点。'
  },
  {
    title: 'The Pragmatic Engineer',
    author: 'Gergely Orosz',
    url: 'https://blog.pragmaticengineer.com/',
    note: '工程师成长和团队管理的实用建议。'
  }
];
---

<BaseLayout
  title="Interests · 读书与文章收藏"
  description="记录我热爱的书籍和值得收藏的技术文章，让个人网站更像真实的我。"
>
  <Header />

  <main class="flex-1">
    <!-- Simplified header section -->
    <section class="py-16">
      <div class="container mx-auto max-w-6xl px-6">
        <div class="text-center space-y-4">
          <p class="text-sm uppercase tracking-[0.3em] text-primary/70">Interests</p>
          <h1 class="text-3xl sm:text-4xl font-bold text-foreground">读书 · 文章收藏</h1>
          <p class="mx-auto max-w-2xl text-muted-foreground">
            记录那些让我思考的书籍和文章，它们塑造了我对技术和生活的理解。
          </p>
        </div>
      </div>
    </section>

    <!-- Reduced padding and kept only bookshelf section -->
    <section class="py-8">
      <div class="container mx-auto max-w-6xl px-6 space-y-8">
        <div class="flex items-center justify-between gap-4">
          <h2 class="text-2xl font-semibold text-foreground">Bookshelf</h2>
          <span class="text-sm text-muted-foreground">阅读，是最耐心的自我更新</span>
        </div>
        <div class="grid gap-6 lg:grid-cols-3">
          {bookshelf.map((shelf) => (
            <div class="rounded-2xl border bg-card/80 p-6 shadow-sm backdrop-blur-sm">
              <h3 class="text-lg font-semibold text-foreground">{shelf.title}</h3>
              <ul class="mt-4 space-y-3 text-sm text-muted-foreground">
                {shelf.items.map((book) => (
                  <li class="rounded-lg bg-muted/60 p-4">
                    <p class="font-medium text-foreground">{book.name}</p>
                    <p class="mt-1 text-xs leading-relaxed">{book.note}</p>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Added articles I like section -->
    <section class="py-8">
      <div class="container mx-auto max-w-6xl px-6 space-y-8">
        <div class="flex items-center justify-between gap-4">
          <h2 class="text-2xl font-semibold text-foreground">Articles I Like</h2>
          <span class="text-sm text-muted-foreground">值得收藏的技术文章和博客</span>
        </div>
        <div class="grid gap-4 md:grid-cols-2">
          {articlesILike.map((article) => (
            <div class="group rounded-2xl border bg-card/80 p-5 shadow-sm transition hover:-translate-y-1 hover:shadow-md">
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1">
                  <h3 class="text-base font-semibold text-foreground group-hover:text-primary">
                    <a href={article.url} target="_blank" rel="noopener noreferrer" class="hover:underline">
                      {article.title}
                    </a>
                  </h3>
                  <p class="text-sm text-muted-foreground mt-1">{article.author}</p>
                </div>
                <svg class="h-4 w-4 text-muted-foreground group-hover:text-primary transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </div>
              <p class="mt-3 text-sm text-muted-foreground leading-relaxed">{article.note}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
