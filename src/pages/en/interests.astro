---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import OptimizedImage from '../../components/OptimizedImage.astro';

const bookshelf = [
  {
    title: 'Currently Reading',
    items: [
      { name: 'The Innovators', note: 'Tracing how curiosity turns into products and teams.' },
      { name: 'Clean Architecture', note: 'Sharpening structure so side projects stay maintainable.' },
    ],
  },
  {
    title: 'Finished',
    items: [
      { name: 'The Three-Body Problem', note: 'Reminds me to keep a sense of wonder about the unknown.' },
      { name: 'The Pragmatic Programmer', note: 'Little habits that keep me moving forward.' },
    ],
  },
  {
    title: 'On My List',
    items: [
      { name: 'Atomic Habits', note: 'Designing systems for personal growth.' },
      { name: 'Designing Data-Intensive Applications', note: 'Deep-diving into distributed thinking.' },
    ],
  },
];

const musicList = [
  {
    name: 'Night Owl',
    artist: 'Galimatias',
    vibe: 'Late-night coding session companion.'
  },
  {
    name: 'Holocene',
    artist: 'Bon Iver',
    vibe: 'Slow mornings with coffee and planning.'
  },
  {
    name: 'Merry Christmas Mr. Lawrence',
    artist: 'Ryuichi Sakamoto',
    vibe: 'piano lines that feel like deep breaths.'
  },
  {
    name: 'About You',
    artist: 'The 1975',
    vibe: 'A soundtrack for evening runs.'
  },
];

const hobbyPhotos = [
  {
    src: '/placeholder.jpg',
    alt: 'Morning run',
    caption: 'Workout · tracking pace but enjoying the sunrise more.'
  },
  {
    src: '/placeholder-user.jpg',
    alt: 'Weekend cooking',
    caption: 'Cooking · experimenting with soups and breakfast recipes.'
  },
  {
    src: '/placeholder.svg?height=220&width=320',
    alt: 'Street photography',
    caption: 'Photography · collecting light and shadow from the city.'
  }
];
---

<BaseLayout
  title="Interests · Books, Music & Hobbies"
  description="A peek into what I read, listen to, and enjoy when I am away from the keyboard."
>
  <Header />

  <main class="flex-1">
    <section class="section-padding">
      <div class="container-width">
        <div class="text-center space-y-4">
          <p class="text-sm uppercase tracking-[0.3em] text-primary/70">Interests</p>
          <h1 class="text-3xl sm:text-4xl font-bold text-foreground">Books · Music · Movement · Photos</h1>
          <p class="mx-auto max-w-2xl text-muted-foreground">
            This corner is a reminder that inspiration often shows up outside the IDE—
            in a marked passage, a chorus on repeat, or the rhythm of cooking and running.
          </p>
        </div>
      </div>
    </section>

    <section class="section-padding pt-2">
      <div class="container-width space-y-10">
        <div class="flex items-center justify-between gap-4">
          <h2 class="text-2xl font-semibold text-foreground">Bookshelf</h2>
          <span class="text-sm text-muted-foreground">Reading keeps my curiosity honest.</span>
        </div>
        <div class="grid gap-6 lg:grid-cols-3">
          {bookshelf.map((shelf) => (
            <div class="rounded-2xl border bg-card/80 p-6 shadow-sm backdrop-blur-sm">
              <h3 class="text-lg font-semibold text-foreground">{shelf.title}</h3>
              <ul class="mt-4 space-y-3 text-sm text-muted-foreground">
                {shelf.items.map((book) => (
                  <li class="rounded-lg bg-muted/60 p-4">
                    <p class="font-medium text-foreground">{book.name}</p>
                    <p class="mt-1 text-xs leading-relaxed">{book.note}</p>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="section-padding pt-2">
      <div class="container-width space-y-10">
        <div class="flex items-center justify-between gap-4">
          <h2 class="text-2xl font-semibold text-foreground">Music</h2>
          <span class="text-sm text-muted-foreground">Playlists for different pockets of the day.</span>
        </div>
        <div class="grid gap-4 md:grid-cols-2">
          {musicList.map((track) => (
            <div class="group rounded-2xl border bg-card/80 p-5 shadow-sm transition hover:-translate-y-1 hover:shadow-md">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-base font-semibold text-foreground">{track.name}</p>
                  <p class="text-sm text-muted-foreground">{track.artist}</p>
                </div>
                <span class="rounded-full bg-primary/10 px-3 py-1 text-xs font-medium text-primary">
                  daily vibe
                </span>
              </div>
              <p class="mt-4 text-sm text-muted-foreground leading-relaxed">{track.vibe}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="section-padding pt-2">
      <div class="container-width space-y-10">
        <div class="flex items-center justify-between gap-4">
          <h2 class="text-2xl font-semibold text-foreground">Other Hobbies</h2>
          <span class="text-sm text-muted-foreground">Snapshots that keep me grounded.</span>
        </div>
        <div class="grid gap-6 md:grid-cols-3">
          {hobbyPhotos.map((photo) => (
            <figure class="overflow-hidden rounded-2xl border bg-card/70 shadow-sm">
              <OptimizedImage src={photo.src} alt={photo.alt} width={320} height={220} class="h-48 w-full object-cover" loading="lazy" />
              <figcaption class="space-y-2 p-4 text-sm text-muted-foreground">
                <p class="font-semibold text-foreground">{photo.alt}</p>
                <p class="leading-relaxed">{photo.caption}</p>
              </figcaption>
            </figure>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
