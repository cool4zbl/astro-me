---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import OptimizedImage from '../components/OptimizedImage.astro';
---

<BaseLayout 
  title="Projects - My Portfolio"
  description="Explore my full-stack development projects featuring Java backend systems, modern web applications, and cloud-native solutions."
>
  <Header />
  
  <main class="flex-1">
    <!-- Hero Section -->
    <section class="section-padding bg-gradient-to-br from-background via-muted/20 to-background">
      <div class="container-width text-center">
        <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl lg:text-6xl mb-6">
          My <span class="gradient-text">Projects</span>
        </h1>
        <p class="mx-auto max-w-2xl text-lg leading-8 text-muted-foreground sm:text-xl">
          A collection of full-stack applications, backend systems, and cloud solutions that showcase my expertise in Java development and modern web technologies.
        </p>
      </div>
    </section>

    <!-- Featured Projects -->
    <section class="section-padding">
      <div class="container-width">
        <div class="space-y-24">
          <!-- Project 1: E-commerce Platform -->
          <div class="grid gap-12 lg:grid-cols-2 lg:gap-16 items-center">
            <div class="order-2 lg:order-1">
              <div class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary mb-4">
                Featured Project
              </div>
              <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl mb-4">
                E-commerce Platform
              </h2>
              <p class="text-lg text-muted-foreground mb-6 leading-relaxed">
                A comprehensive e-commerce solution built with Spring Boot and React. Features include user authentication, product catalog management, shopping cart functionality, payment processing with Stripe, and an admin dashboard for order management.
              </p>
              
              <div class="space-y-4 mb-6">
                <div>
                  <h3 class="font-semibold text-foreground mb-2">Key Features:</h3>
                  <ul class="text-muted-foreground space-y-1 text-sm">
                    <li>• JWT-based authentication and authorization</li>
                    <li>• RESTful API with comprehensive error handling</li>
                    <li>• Real-time inventory management</li>
                    <li>• Secure payment processing integration</li>
                    <li>• Responsive admin dashboard</li>
                  </ul>
                </div>
              </div>

              <div class="flex flex-wrap gap-2 mb-6">
                <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">Spring Boot</span>
                <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">React</span>
                <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">PostgreSQL</span>
                <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">Redis</span>
                <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">Docker</span>
              </div>

              <div class="flex gap-4">
                <a
                  href="#"
                  class="inline-flex items-center rounded-md bg-primary px-4 py-2 text-sm font-semibold text-primary-foreground shadow-sm hover:bg-primary/90 transition-colors"
                >
                  <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                  Live Demo
                </a>
                <a
                  href="#"
                  class="inline-flex items-center rounded-md border border-input bg-background px-4 py-2 text-sm font-semibold text-foreground shadow-sm hover:bg-accent hover:text-accent-foreground transition-colors"
                >
                  <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  GitHub
                </a>
              </div>
            </div>
            <div class="order-1 lg:order-2">
              <div class="aspect-video rounded-xl bg-muted overflow-hidden shadow-2xl">
                <OptimizedImage 
                  src="/placeholder.svg?height=400&width=600"
                  alt="E-commerce Platform Screenshot"
                  width={600}
                  height={400}
                  class="h-full w-full object-cover"
                  loading="lazy"
                />
              </div>
            </div>
          </div>

          <!-- Project 2: Microservices Architecture -->
          <div class="grid gap-12 lg:grid-cols-2 lg:gap-16 items-center">
            <div class="aspect-video rounded-xl bg-muted overflow-hidden shadow-2xl">
              <OptimizedImage 
                src="/placeholder.svg?height=400&width=600"
                alt="Microservices Architecture Diagram"
                width={600}
                height={400}
                class="h-full w-full object-cover"
                loading="lazy"
              />
            </div>
            <div>
              <div class="inline-flex items-center rounded-full bg-accent/10 px-3 py-1 text-sm font-medium text-accent mb-4">
                Backend Focus
              </div>
              <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl mb-4">
                Microservices API Gateway
              </h2>
              <p class="text-lg text-muted-foreground mb-6 leading-relaxed">
                A scalable microservices architecture built with Spring Cloud, featuring service discovery, load balancing, circuit breakers, and distributed tracing. Deployed on Kubernetes with automated CI/CD pipelines.
              </p>
              
              <div class="space-y-4 mb-6">
                <div>
                  <h3 class="font-semibold text-foreground mb-2">Architecture Highlights:</h3>
                  <ul class="text-muted-foreground space-y-1 text-sm">
                    <li>• Spring Cloud Gateway for API routing</li>
                    <li>• Eureka service discovery and registration</li>
                    <li>• Hystrix circuit breaker pattern</li>
                    <li>• Zipkin distributed tracing</li>
                    <li>• Kubernetes deployment with Helm charts</li>
                  </ul>
                </div>
              </div>

              <div class="flex flex-wrap gap-2 mb-6">
                <span class="inline-flex items-center rounded-full bg-accent/10 px-3 py-1 text-sm font-medium text-accent">Spring Cloud</span>
                <span class="inline-flex items-center rounded-full bg-accent/10 px-3 py-1 text-sm font-medium text-accent">Kubernetes</span>
                <span class="inline-flex items-center rounded-full bg-accent/10 px-3 py-1 text-sm font-medium text-accent">Docker</span>
                <span class="inline-flex items-center rounded-full bg-accent/10 px-3 py-1 text-sm font-medium text-accent">MongoDB</span>
                <span class="inline-flex items-center rounded-full bg-accent/10 px-3 py-1 text-sm font-medium text-accent">RabbitMQ</span>
              </div>

              <div class="flex gap-4">
                <a
                  href="#"
                  class="inline-flex items-center rounded-md border border-input bg-background px-4 py-2 text-sm font-semibold text-foreground shadow-sm hover:bg-accent hover:text-accent-foreground transition-colors"
                >
                  <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  View Code
                </a>
                <a
                  href="#"
                  class="inline-flex items-center rounded-md border border-input bg-background px-4 py-2 text-sm font-semibold text-foreground shadow-sm hover:bg-accent hover:text-accent-foreground transition-colors"
                >
                  <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6-4h6m-6 8h6m-3-9v10" />
                  </svg>
                  Documentation
                </a>
              </div>
            </div>
          </div>

          <!-- Project 3: Real-time Analytics -->
          <div class="grid gap-12 lg:grid-cols-2 lg:gap-16 items-center">
            <div class="order-2 lg:order-1">
              <div class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary mb-4">
                Real-time System
              </div>
              <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl mb-4">
                Analytics Dashboard
              </h2>
              <p class="text-lg text-muted-foreground mb-6 leading-relaxed">
                A real-time analytics platform built with Spring WebFlux for reactive programming. Features live data streaming, interactive charts, and customizable dashboards with sub-second latency for business intelligence.
              </p>
              
              <div class="space-y-4 mb-6">
                <div>
                  <h3 class="font-semibold text-foreground mb-2">Technical Features:</h3>
                  <ul class="text-muted-foreground space-y-1 text-sm">
                    <li>• Reactive streams with WebFlux and WebSocket</li>
                    <li>• Redis for real-time data caching</li>
                    <li>• Interactive charts with Chart.js and D3.js</li>
                    <li>• Custom dashboard builder interface</li>
                    <li>• Export capabilities (PDF, Excel, CSV)</li>
                  </ul>
                </div>
              </div>

              <div class="flex flex-wrap gap-2 mb-6">
                <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">Spring WebFlux</span>
                <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">Redis</span>
                <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">WebSocket</span>
                <span class="inline-flex items-centers rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">Chart.js</span>
                <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">Vue.js</span>
              </div>

              <div class="flex gap-4">
                <a
                  href="#"
                  class="inline-flex items-center rounded-md bg-primary px-4 py-2 text-sm font-semibold text-primary-foreground shadow-sm hover:bg-primary/90 transition-colors"
                >
                  <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                  Live Demo
                </a>
                <a
                  href="#"
                  class="inline-flex items-center rounded-md border border-input bg-background px-4 py-2 text-sm font-semibold text-foreground shadow-sm hover:bg-accent hover:text-accent-foreground transition-colors"
                >
                  <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  GitHub
                </a>
              </div>
            </div>
            <div class="order-1 lg:order-2">
              <div class="aspect-video rounded-xl bg-muted overflow-hidden shadow-2xl">
                <OptimizedImage 
                  src="/placeholder.svg?height=400&width=600"
                  alt="Analytics Dashboard Screenshot"
                  width={600}
                  height={400}
                  class="h-full w-full object-cover"
                  loading="lazy"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Other Projects Grid -->
    <section class="section-padding bg-muted/30">
      <div class="container-width">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl mb-4">
            Other Projects
          </h2>
          <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
            Additional projects showcasing various technologies and problem-solving approaches.
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          <!-- Additional Project Cards -->
          <div class="rounded-xl border bg-card p-6 shadow-sm hover:shadow-md transition-all duration-200">
            <div class="aspect-video rounded-lg bg-muted mb-4 overflow-hidden">
              <OptimizedImage 
                src="/placeholder.svg?height=200&width=350"
                alt="Task Management App"
                width={350}
                height={200}
                class="h-full w-full object-cover"
                loading="lazy"
              />
            </div>
            <h3 class="text-xl font-semibold text-card-foreground mb-2">Task Management API</h3>
            <p class="text-muted-foreground text-sm mb-4">
              RESTful API for task management with team collaboration features, built with Spring Boot and JWT authentication.
            </p>
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">Spring Boot</span>
              <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">MySQL</span>
              <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">JWT</span>
            </div>
            <a href="#" class="text-primary hover:text-accent font-medium text-sm transition-colors">
              View Project →
            </a>
          </div>

          <div class="rounded-xl border bg-card p-6 shadow-sm hover:shadow-md transition-all duration-200">
            <div class="aspect-video rounded-lg bg-muted mb-4 overflow-hidden">
              <OptimizedImage 
                src="/placeholder.svg?height=200&width=350"
                alt="Real-time Chat App"
                width={350}
                height={200}
                class="h-full w-full object-cover"
                loading="lazy"
              />
            </div>
            <h3 class="text-xl font-semibold text-card-foreground mb-2">Real-time Chat App</h3>
            <p class="text-muted-foreground text-sm mb-4">
              WebSocket-based chat application with rooms, file sharing, and message history using Spring Boot and React.
            </p>
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">WebSocket</span>
              <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">React</span>
              <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">MongoDB</span>
            </div>
            <a href="#" class="text-primary hover:text-accent font-medium text-sm transition-colors">
              View Project →
            </a>
          </div>

          <div class="rounded-xl border bg-card p-6 shadow-sm hover:shadow-md transition-all duration-200">
            <div class="aspect-video rounded-lg bg-muted mb-4 overflow-hidden">
              <OptimizedImage 
                src="/placeholder.svg?height=200&width=350"
                alt="Inventory System"
                width={350}
                height={200}
                class="h-full w-full object-cover"
                loading="lazy"
              />
            </div>
            <h3 class="text-xl font-semibold text-card-foreground mb-2">Inventory Management</h3>
            <p class="text-muted-foreground text-sm mb-4">
              Enterprise inventory management system with barcode scanning, reporting, and multi-location support.
            </p>
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">Spring MVC</span>
              <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">Thymeleaf</span>
              <span class="inline-flex items-center rounded-full bg-secondary px-2 py-1 text-xs font-medium text-secondary-foreground">PostgreSQL</span>
            </div>
            <a href="#" class="text-primary hover:text-accent font-medium text-sm transition-colors">
              View Project →
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
