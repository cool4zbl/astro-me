---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const resume = {
  en: '/Binliu Zhang-Senior-Software-Engineer.pdf',
    // todo: add Chinese version later
  zh: '/Binliu Zhang-Senior-Software-Engineer.pdf',
};

const experiences = [
  {
    title: "Senior Software Engineer",
    company: "Just Eat Takeaway",
    department: "Help Experience / Platform",
    location: "Enschede, Netherlands",
    period: "May 2023 – Present",
    current: true,
    description: "Own end-to-end automation for customer support operations across Europe, partnering with product, operations, and data teams to design resilient platforms that keep millions of orders moving smoothly.",
    highlights: [
      "Designed an event-driven orchestration layer (Java, Spring Boot, Kafka, AWS SQS, Redis) for the help chatbot, cutting manual interventions by 60% and improving stability.",
      "Architected JETMS, a unified operational platform with multi-tenant routing and a shared data model that consolidates 20+ services and trims resolution SLAs by ~33%.",
      "Built a centralized logging pipeline with Benthos, Kafka, AWS SQS, and OpenSearch to process 50K+ logs/day and reduce MTTR by 25%.",
      "Drove instrumentation, documentation, and incident reviews that strengthened on-call readiness across the platform."
    ],
    skills: ["Java", "Spring Boot", "Kafka", "AWS", "Redis", "TypeScript"],
    icon: "building",
    theme: "primary"
  },
  {
    title: "Senior Software Engineer",
    company: "Grab",
    department: "Geo – Map Collection",
    location: "Beijing, China",
    period: "Feb 2021 – Apr 2023",
    current: false,
    description: "Led geospatial data platforms that power Grab's ride-hailing and delivery experiences, balancing contributor workflows, data quality, and downstream service requirements.",
    highlights: [
      "Built Jarvis, a crowdsourced task management platform (Go, PostgreSQL, ElasticSearch, Kafka) scaling to 300K tasks and 400K+ geospatial data points.",
      "Engineered KartaView, a high-performance street-view service backed by PostGIS and the Douglas–Peucker algorithm to shrink geospatial data size by 70% and accelerate queries.",
      "Delivered a distributed notification system with Redis locks, Kafka, and ElasticSearch providing exactly-once delivery for 10K+ monthly notifications.",
      "Partnered with product ops to prioritize roadmap, instrumentation, and rollout strategies across Southeast Asia markets."
    ],
    skills: ["Go", "PostgreSQL", "PostGIS", "Kafka", "ElasticSearch", "Distributed Systems"],
    icon: "badge-check",
    theme: "accent"
  },
  {
    title: "Senior Software Engineer",
    company: "Ant Group",
    department: "AI Data Platform",
    location: "Beijing, China",
    period: "Jan 2018 – Jul 2020",
    current: false,
    description: "Re-architected experimentation infrastructure used by Ant Group's consumer and merchant products, enabling faster iteration while maintaining rigorous governance.",
    highlights: [
      "Rebuilt Darwin experimentation platform (client SDKs + Java APIs) with standardized contracts supporting 15M+ DAUs and 1,000+ experiments annually.",
      "Developed a full-stack traffic-splitting SDK with secondary hashing and client caching to cut server compute cost by 40% while ensuring consistent experiment allocation.",
      "Partnered with data scientists and PMs to craft governance that delivered a 2% conversion lift and $10M+ annual impact."
    ],
    skills: ["Java", "Experimentation", "SDK Design", "Microservices"],
    icon: "code",
    theme: "secondary"
  },
  {
    title: "Software Engineer",
    company: "Douban",
    department: "User Product",
    location: "Beijing, China",
    period: "Jul 2015 – Sep 2017",
    current: false,
    description: "Delivered core social and media features for one of China's largest cultural communities, collaborating with designers and product managers on experiences used by 100M+ users.",
    highlights: [
      "Shipped and maintained high-traffic Python and JavaScript services across web and mobile surface."
    ],
    skills: ["Python", "JavaScript", "Web Development", "Product Engineering"],
    icon: "layers",
    theme: "muted"
  },
  {
    title: "B.Sc. Electronic Engineering",
    company: "University of Electronic Science and Technology of China",
    department: "",
    location: "",
    period: "2015 - 2019",
    current: false,
    description: "Focused on embedded systems, signal processing, and software engineering fundamentals while collaborating on multidisciplinary projects that sparked my interest in large-scale platforms.",
    highlights: [
      "Studied C programming, embedded systems, digital circuits, and analog circuits.",
      "Gained an understanding of the underlying computer hardware components and computer system architecture.",
      "I still find software development interesting, so I taught myself web development before graduation."
    ],
    skills: ["Electronic Engineering", "Signal Processing", "Algorithms", "Embedded Systems"],
    icon: "academic-cap",
    theme: "muted",
    isEducation: true
  }
];

const getIcon = (iconName: string) => {
  const icons = {
    building: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4",
    "badge-check": "M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z",
    code: "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4",
    layers: "M12 14l9-5-9-5-9 5 9 5z",
    "academic-cap": "M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
  };
  return icons[iconName] || icons.building;
};

---

<BaseLayout
  title="Experience - My Professional Journey"
  description="Explore my professional experience in full-stack development, backend systems, and team leadership across various industries and technologies."
>
  <Header />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="section-padding bg-gradient-to-br from-background via-muted/20 to-background">
      <div class="container-width text-center">
        <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl lg:text-6xl mb-6">
          My <span class="gradient-text">Experience</span>
        </h1>
        <p class="mx-auto max-w-2xl text-lg leading-8 text-muted-foreground sm:text-xl">
          8+ years architecting distributed platforms for food delivery, mobility, fintech, and consumer communities—owning everything from event-driven services and data pipelines to the operational tooling teams rely on every day.
        </p>
        <div class="mt-8">
          <a
            href={resume[Astro.props.lang || 'en']}
            download="Binliu-Zhang-Senior-Software-Engineer.pdf"
            class="inline-flex items-center rounded-full bg-primary px-6 py-3 text-sm font-semibold text-primary-foreground shadow-sm transition hover:bg-primary/90"
          >
            <svg class="mr-2 h-4 w-4" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
              <polyline points="7,10 12,15 17,10" />
              <line x1="12" y1="15" x2="12" y2="3" />
            </svg>
            Download CV
          </a>
        </div>
      </div>
    </section>

    <!-- Experience Timeline -->
    <section class="section-padding">
      <div class="container-width">
        <div class="relative">
          <!-- Timeline Line -->
          <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-border"></div>

          <div class="space-y-12">

            {experiences.map((exp) => (
              <div class="relative flex items-start space-x-8">
                <div class="flex-shrink-0">
                  <div class={`h-16 w-16 rounded-full bg-${exp.theme} flex items-center justify-center shadow-lg`}>
                    <svg class={`h-8 w-8 text-${exp.theme}-foreground`} viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getIcon(exp.icon)} />
                    </svg>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="bg-card rounded-xl border p-8 shadow-sm">
                    <div class="flex items-start justify-between mb-4">
                      <div>
                        <h3 class="text-2xl font-bold text-card-foreground">{exp.title}</h3>
                        <p class={`text-lg font-semibold ${exp.theme === 'primary' ? 'text-primary' : exp.theme === 'accent' ? 'text-accent' : exp.theme === 'secondary' ? 'text-secondary-foreground' : 'text-muted-foreground'}`}>
                          {exp.company}{exp.department && ` · ${exp.department}`}
                        </p>
                        {exp.location && <p class="text-sm text-muted-foreground mt-1">{exp.location}</p>}
                      </div>
                      <div class="text-right">
                        {exp.current && (
                          <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary">
                            Current
                          </span>
                        )}
                        <p class="text-sm text-muted-foreground mt-1">{exp.period}</p>
                      </div>
                    </div>

                    <p class="text-muted-foreground mb-6 leading-relaxed">
                      {exp.description}
                    </p>

                    <div class="space-y-4 mb-6">
                      <div>
                        <h4 class="font-semibold text-card-foreground mb-2">Highlights:</h4>
                        <ul class="text-muted-foreground space-y-2 text-sm list-disc pl-6">
                          {exp.highlights.map((highlight) => (
                            <li>{highlight}</li>
                          ))}
                        </ul>
                      </div>

                    </div>

                    <div class="flex flex-wrap gap-2">
                      {exp.skills.map((skill) => (
                        <span class={`inline-flex items-center rounded-full ${exp.theme === 'primary' ? 'bg-primary/10 text-primary' : exp.theme === 'accent' ? 'bg-accent/10 text-accent' : exp.theme === 'secondary' ? 'bg-secondary/20 text-secondary-foreground' : 'bg-muted/50 text-muted-foreground'} px-3 py-1 text-sm font-medium`}>
                          {skill}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            ))}

          </div>
        </div>
      </div>
    </section>

  </main>

  <Footer />
</BaseLayout>
