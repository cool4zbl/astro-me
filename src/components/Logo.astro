---
import { getLangFromUrl, getTranslations, getLocalizedPath } from "../i18n/config";
import type { Language } from "../i18n/config";

interface Props {
  lang?: Language;
  variant?: "header" | "footer";
  class?: string;
}

const { lang: propLang, variant = "header", class: className = "" } = Astro.props;
const lang = propLang || getLangFromUrl(Astro.url);
const t = getTranslations(lang);

---

<a href={getLocalizedPath("/", lang)} class={`flex items-center space-x-2 group ${className}`}>
  <div class="h-8 w-8 rounded-lg bg-primary flex items-center justify-center shadow-sm">
    <span class="text-primary-foreground text-sm font-bold tracking-tighter">
      {t("site.logoText")}
    </span>
  </div>
  <span class={"text-xl font-extrabold group-hover:text-primary transition-colors tracking-tight"}>
    {t("site.title")}
  </span>
</a>

