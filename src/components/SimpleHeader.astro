---
// Simplified header component
---

<header class="sticky top-0 z-40 w-full border-b bg-background/95 backdrop-blur">
  <div class="container mx-auto flex h-16 items-center justify-between px-4">
    <div class="flex items-center space-x-2">
      <a href="/" class="flex items-center space-x-2 group">
        <div class="h-8 w-8 rounded-lg bg-primary flex items-center justify-center">
          <span class="text-primary-foreground font-bold text-sm">MB</span>
        </div>
        <span class="text-xl font-bold group-hover:text-primary transition-colors">
          My Blog
        </span>
      </a>
    </div>
    
    <nav class="hidden md:flex items-center space-x-6">
      <a href="/" class="text-sm font-medium transition-colors hover:text-primary">Home</a>
      <a href="/blog" class="text-sm font-medium transition-colors hover:text-primary text-muted-foreground">Blog</a>
      <a href="/projects" class="text-sm font-medium transition-colors hover:text-primary text-muted-foreground">Projects</a>
      <a href="/experience" class="text-sm font-medium transition-colors hover:text-primary text-muted-foreground">Experience</a>
    </nav>

    <div class="flex items-center space-x-4">
      <button class="p-2 rounded-lg hover:bg-muted transition-colors" aria-label="Toggle theme">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </button>
    </div>
  </div>
</header>
