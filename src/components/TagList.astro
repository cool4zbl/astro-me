---
import { getLangFromUrl, getLocalizedPath } from '../i18n/config';

const { tags, class: className, lang: langProp } = Astro.props;
const lang = langProp ?? getLangFromUrl(Astro.url);
---

<div class={`flex flex-wrap gap-2 ${className || ''}`}>
  {tags.map((tag) => (
    <a
      href={getLocalizedPath(`/tags/${tag}/`, lang)}
      class="inline-flex items-center rounded-full bg-secondary px-2.5 py-0.5 text-xs font-medium text-secondary-foreground hover:bg-secondary/80 transition-colors"
    >
      {tag}
    </a>
  ))}
</div>
